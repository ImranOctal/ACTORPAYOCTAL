<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.productList.ProductsListFragment"
    android:layout_marginTop="@dimen/_20sdp"
    >

<EditText
    android:id="@+id/product_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/item_bg"
    android:layout_marginHorizontal="@dimen/_25sdp"
    android:padding="@dimen/_5sdp"
    android:drawableStart="@drawable/ic_baseline_search_24"
    android:drawablePadding="@dimen/_10sdp"
    android:inputType="text"
    android:imeOptions="actionSearch"
    android:hint="Search Products"
    android:textColorHint="@color/white"
    android:textColor="@color/white"
    android:fontFamily="@font/poppins_regular"
    android:textSize="@dimen/_12ssp"
    android:maxLength="100"

    />


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerview_categories"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp"
    app:layout_constraintTop_toBottomOf="@+id/product_search"
    tools:itemCount="5"
    tools:listitem="@layout/row_categories_item"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:paddingHorizontal="@dimen/_15sdp"
    android:clipToPadding="false"
    />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerview_product"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/recyclerview_categories"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:itemCount="0"
    tools:listitem="@layout/product_list_item"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_15sdp"

    />


    <ImageView
        android:id="@+id/image_empty"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/oops"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/text_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Product are not available"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>