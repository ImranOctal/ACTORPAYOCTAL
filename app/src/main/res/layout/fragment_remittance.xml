<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_20sdp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:background="@drawable/round_corner_white_bg"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_7sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/tv_circle_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_circle" />

                    <TextView
                        android:id="@+id/tv_circle_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/unselected_circle" />

                    <TextView
                        android:id="@+id/tv_circle_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/unselected_circle" />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/firstLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                      >

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/RegularTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:text="@string/choose_country"
                            android:textColor="@color/light_dark_grey"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <androidx.appcompat.widget.AppCompatEditText
                                style="@style/RegularTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:drawableEnd="@drawable/drop_down_arrow"
                                android:hint="@string/choose_country"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:singleLine="true"
                                android:textColorHint="@color/light_grey" />
                        </androidx.cardview.widget.CardView>


                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/RegularTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/currency_type"
                            android:textColor="@color/light_dark_grey"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <androidx.appcompat.widget.AppCompatEditText
                                style="@style/RegularTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:hint="@string/enter_currency_type"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:singleLine="true"
                                android:textColorHint="@color/light_grey" />
                        </androidx.cardview.widget.CardView>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonNext"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:backgroundTint="#ED335F"
                            android:text="@string/next"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_12sdp"
                            app:cornerRadius="@dimen/_4sdp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/secondLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/RegularTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:text="@string/enter_amount"
                            android:textColor="@color/light_dark_grey"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <androidx.appcompat.widget.AppCompatEditText
                                style="@style/RegularTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:drawableEnd="@drawable/drop_down_arrow"
                                android:hint="@string/enter_amount"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:singleLine="true"
                                android:textColorHint="@color/light_grey" />
                        </androidx.cardview.widget.CardView>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonNextTwo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:backgroundTint="#ED335F"
                            android:text="@string/next"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_12sdp"
                            app:cornerRadius="@dimen/_4sdp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/thirdLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/RegularTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:text="@string/enter_name"
                            android:textColor="@color/light_dark_grey"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <androidx.appcompat.widget.AppCompatEditText
                                style="@style/RegularTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:drawableEnd="@drawable/drop_down_arrow"
                                android:hint="@string/enter_name"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:singleLine="true"
                                android:textColorHint="@color/light_grey" />
                        </androidx.cardview.widget.CardView>


                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/RegularTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/enter_email"
                            android:textColor="@color/light_dark_grey"
                            android:textSize="@dimen/_12sdp" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <androidx.appcompat.widget.AppCompatEditText
                                style="@style/RegularTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:hint="@string/enter_email_i_d"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:singleLine="true"
                                android:textColorHint="@color/light_grey" />
                        </androidx.cardview.widget.CardView>

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/RegularTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"

                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/beneficiary_account_no"
                            android:textColor="@color/light_dark_grey"
                            android:textSize="@dimen/_12sdp" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <androidx.appcompat.widget.AppCompatEditText
                                style="@style/RegularTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:hint="@string/enter_account"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:singleLine="true"
                                android:textColorHint="@color/light_grey" />
                        </androidx.cardview.widget.CardView>


                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/RegularTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"

                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/unique_code"
                            android:textColor="@color/light_dark_grey"
                            android:textSize="@dimen/_12sdp" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <androidx.appcompat.widget.AppCompatEditText
                                style="@style/RegularTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:hint="@string/enter_unique_code"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:singleLine="true"
                                android:textColorHint="@color/light_grey" />
                        </androidx.cardview.widget.CardView>


                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/RegularTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"

                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/select_branch"
                            android:textColor="@color/light_dark_grey"
                            android:textSize="@dimen/_12sdp" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <androidx.appcompat.widget.AppCompatEditText
                                style="@style/RegularTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:drawableEnd="@drawable/drop_down_arrow"
                                android:hint="@string/select_branch"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:singleLine="true"
                                android:textColorHint="@color/light_grey" />
                        </androidx.cardview.widget.CardView>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonPayNow"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:backgroundTint="#ED335F"
                            android:text="@string/pay_now"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_12sdp"
                            app:cornerRadius="@dimen/_4sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </FrameLayout>
            </androidx.core.widget.NestedScrollView>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>