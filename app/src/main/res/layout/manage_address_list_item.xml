<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0.8dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Home"
                    android:textColor="#383838"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/notification_item_grey_bg"
                        android:padding="1dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/about_us" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/notification_item_grey_bg"
                        android:padding="1dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/about_us" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/notification_item_grey_bg"
                        android:padding="1dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/about_us" />


                </LinearLayout>


                <TextView
                    android:id="@+id/productDisc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productTitle"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="2"
                    android:text="Roop Vihar Colony, 6/78, Hari Marg, Near Kardhani Shopping Center, Malviya Nagar, Jaipur, Rajasthan 302017"
                    android:textSize="12sp" />


            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>