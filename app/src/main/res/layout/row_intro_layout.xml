<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="intromodel"
            type="com.octal.actorpayuser.ui.intro.IntroModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:text="Skip"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/poppins_light"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/skip"
        app:layout_constraintBottom_toBottomOf="@+id/h60"
        android:src="@drawable/intro_1"
        android:scaleType="fitXY"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60"

        />

    <TextView
        android:id="@+id/text_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/h60"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:text="@{intromodel.text}"
        tools:text="Add Account to Manager"
        android:textColor="@color/text_color"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="@dimen/_16ssp"
        android:gravity="center"
        />



    <TextView
        android:id="@+id/text_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_heading"
        app:layout_constraintBottom_toTopOf="@id/h80"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:ellipsize="end"
        android:text="@{intromodel.desc}"
        tools:text="@string/dummy_text"
        android:textColor="@color/text_color"
        android:fontFamily="@font/poppins_light"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80"

        />


    <TextView
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:text="Previous"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/poppins_regular"
        android:visibility="visible"
        />


    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:text="Next"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/poppins_regular"
        android:visibility="visible"
        />



    <TextView
        android:id="@+id/get_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@drawable/border_round_pink"
        android:backgroundTint="@color/pink_color"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Get Started"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
        android:drawablePadding="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:visibility="gone"


        />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>