<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.productList.productsfilter.ProductFilterFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/applyFilter"
        android:orientation="horizontal">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customizationTypeRecyclerView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".4"
        android:background="@color/light_grey_home"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/filter_customization_list_item" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customizationSubTypeRecyclerView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".6"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/filter_customization_list_item" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/applyFilter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/primary"
        android:gravity="center"
        android:text="Apply Filters"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:fontFamily="@font/poppins_bold" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>