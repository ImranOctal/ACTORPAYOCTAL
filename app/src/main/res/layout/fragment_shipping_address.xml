<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shippingaddress.ShippingAddressFragment"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_20sdp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toTopOf="parent"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:text="Add a new Address"
            android:textColor="@color/primary"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/poppins_regular"
            android:drawableStart="@drawable/plus"
            android:drawablePadding="@dimen/_10sdp"

            />

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shipping_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/add_address"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        tools:listitem="@layout/shipping_list_item"
        tools:itemCount="3"
        android:paddingBottom="@dimen/_10sdp"
        android:clipToPadding="false"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deliver_here"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/blue_color"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:visibility="gone"
        android:text="Select This"
        android:textSize="@dimen/_10ssp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>