<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:paddingTop="50dp">


        <include
            android:id="@+id/toolbar"
            layout="@layout/common_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner_white_bg"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="30dp"
            android:paddingEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/RegularTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:src="@drawable/card"
                android:inputType="numberDecimal"
                />



            <com.gauravbhola.ripplepulsebackground.RipplePulseLayout
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:clipChildren="false"
                android:layout_gravity="center"
               app:rippleColor ="#507D7E80"
                app:rippleType ="stroke"
                app:strokeWidth="2dp"
                android:layout_margin="@dimen/_10sdp"
                app:startRadius="42dp"
                app:endRadius="100dp"
                app:duration="2000"
                android:id="@+id/layout_ripplepulse">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_100sdp"
                    android:minWidth="@dimen/_100sdp"
                    android:gravity="center"
                    android:text="searching..."
                    android:layout_centerInParent="true"
                    android:background="@drawable/round_shadow_box_2" />


            </com.gauravbhola.ripplepulsebackground.RipplePulseLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:backgroundTint="#ED335F"
                android:text="Pay Now"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"
                app:cornerRadius="@dimen/_5sdp" />




        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>