    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/totalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/checkout"
        android:background="@color/white"
        android:padding="@dimen/_10sdp"
        >

        <TextView
            android:id="@+id/sub_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/poppins_semibold"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14ssp"
            tools:ignore="RtlSymmetry"
            android:text="@string/sub_total" />


        <TextView
            android:id="@+id/sub_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/sub_total_text"
            app:layout_constraintBottom_toBottomOf="@+id/sub_total_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/poppins_medium"
            tools:text="@string/dummy_actual_amount"
            android:textColor="@color/blue_color"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/shipping_charge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_total_text"
            android:fontFamily="@font/poppins_semibold"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14ssp"
            tools:ignore="RtlSymmetry"
            android:visibility="gone"
            android:text="@string/shipping_charge" />


        <TextView
            android:id="@+id/shipping_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/shipping_charge_text"
            app:layout_constraintBottom_toBottomOf="@+id/shipping_charge_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/poppins_medium"
            tools:text="@string/dummy_actual_amount"
            android:textColor="@color/blue_color"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/gst_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shipping_charge_text"
            android:fontFamily="@font/poppins_semibold"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14ssp"
            tools:ignore="RtlSymmetry"
            android:text="@string/gst" />


        <TextView
            android:id="@+id/gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/gst_text"
            app:layout_constraintBottom_toBottomOf="@+id/gst_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/poppins_medium"
            tools:text="@string/dummy_actual_amount"
            android:textColor="@color/blue_color"
            android:textSize="@dimen/_12ssp" />

        <View
            android:id="@+id/total_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/very_light_grey"
            app:layout_constraintTop_toBottomOf="@id/gst_text"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <TextView
            android:id="@+id/total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/total_view"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14ssp"
            tools:ignore="RtlSymmetry"
            android:text="@string/total" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/total_text"
            app:layout_constraintBottom_toBottomOf="@+id/total_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/poppins_medium"
            tools:text="@string/dummy_actual_amount"
            android:textColor="@color/blue_color"
            android:textSize="@dimen/_12ssp" />


        <View
            android:id="@+id/total_view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/very_light_grey"
            app:layout_constraintTop_toBottomOf="@id/total"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <RelativeLayout
            android:id="@+id/promo_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/total_view2"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/btn_outline_gray"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            >

            <EditText
                android:id="@+id/promo_edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/apply"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:paddingHorizontal="@dimen/_10sdp"
                android:hint="@string/enter_promo_code"
                android:textColor="@color/text_color"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_12ssp"
                android:autofillHints="emailAddress" />


            <TextView
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_medium"
                tools:text="Apply"
                android:textColor="@color/primary"
                android:textSize="@dimen/_12ssp" />


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="@color/pink_color"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/place_order"
        android:textSize="@dimen/_10ssp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>