                     </com.google.android.material.textfield.TextInputLayout>
                 </androidx.cardview.widget.CardView>-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cardViewMobile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtMobileNumber">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            app:ccp_autoDetectCountry="true"
                            app:ccp_clickable="true"
                            app:ccp_showNameCode="false"
                            app:ccp_showArrow="true"
                            app:ccp_textSize="@dimen/_10sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/divider"
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:background="?android:attr/listDivider"
                            app:layout_constraintBottom_toBottomOf="@id/ccp"
                            app:layout_constraintEnd_toEndOf="@id/ccp"
                            app:layout_constraintTop_toTopOf="@id/ccp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextMobile"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="Phone Number"
                            android:inputType="number"
                            android:maxLength="15"
                            android:textColor="@color/text_color"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_11ssp"
                            android:fontFamily="@font/poppins_regular"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/divider"
                            app:layout_constraintTop_toTopOf="parent" />



                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/errorOnPhone"
                    style="@style/errotextViewStyle"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/error_phone"
                    android:visibility="gone"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_first"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/firstName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/first_name"
                        style="@style/RegularTextView"
                        android:maxLength="50"
                        android:background="@android:color/transparent"
                        android:textColor="@color/text_color"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:inputType="text"
                        android:textSize="@dimen/_12sdp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/errorOnName"
                    style="@style/errotextViewStyle"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/error_name"
                    android:visibility="gone"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_last"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/lastName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/last_name"
                        style="@style/RegularTextView"
                        android:maxLength="50"
                        android:background="@android:color/transparent"
                        android:textColor="@color/text_color"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:inputType="text"
                        android:textSize="@dimen/_12sdp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/errorOnLastName"
                    style="@style/errotextViewStyle"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/error_l_name"
                    android:visibility="gone"
                    />


                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/email"
                        style="@style/RegularTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:maxLength="100"
                        android:hint="@string/email_address"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/errorOnEmail"
                    style="@style/errotextViewStyle"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/oops_your_email_is_not_correct_or_empty"
                    android:visibility="gone"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/password"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/RegularTextView"
                            android:background="@android:color/transparent"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:maxLength="50"
                            android:textColor="@color/text_color"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"/>

                        <ImageView
                            android:id="@+id/signup_password_show_hide"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/show"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/errorOnPassword"
                    style="@style/errotextViewStyle"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/oops_your_password_is_not_valid"
                    android:visibility="gone"
                    />


                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_gender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_5sdp"
                        android:theme="@style/Spinner"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/errorOnGender"
                    style="@style/errotextViewStyle"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/please_select_gender"
                    android:visibility="gone"
                    />


                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_dob"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:clickable="true"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/dob"
                        style="@style/RegularTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:maxLength="100"
                        android:hint="@string/date_of_birth"
                        android:clickable="false"
                        android:focusable="false"
                        android:enabled="false"
                        android:longClickable="false"
                        android:drawableEnd="@drawable/cal_icon"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/errorOnDate"
                    style="@style/errotextViewStyle"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/plase_select_dob"
                    android:visibility="gone"

                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_pan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/pan"
                        style="@style/RegularTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:maxLength="10"
                        android:hint="Enter PAN"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/errorOnPan"
                    style="@style/errotextViewStyle"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/please_valid_pan"
                    android:visibility="gone"

                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_adhar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/adhar"
                        style="@style/RegularTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:maxLength="16"
                        android:hint="Enter Adhar"
                        android:inputType="number"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/errorOnAdhar"
                    style="@style/errotextViewStyle"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/enter_valid_adhar"
                    android:visibility="gone"

                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    >

                    <CheckBox
                        android:id="@+id/sign_check_terms"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:checked="true"
                        />
                    <TextView
                        android:id="@+id/signip_terms_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        style="@style/RegularTextView"
                        android:textSize="@dimen/_10ssp"
                        android:text="@string/terms_of_use_and_privacy_policy"/>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:backgroundTint="#ED335F"
                    android:text="signup"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_12sdp"
                    app:cornerRadius="@dimen/_5sdp"/>

                <ProgressBar
                    android:id="@+id/signup_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>