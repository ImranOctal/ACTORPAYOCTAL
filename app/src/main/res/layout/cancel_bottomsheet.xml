<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp"
        android:background="@drawable/top_corner"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:text="@string/add_note"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_16sdp"
            android:layout_height="wrap_content"/>




        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/orderstatus_bg"
            android:gravity="start"
            android:hint="Add description"
            android:padding="@dimen/_6ssp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            >


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancnel"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/productDisc"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="@color/pink_color"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="@dimen/_9ssp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                app:layout_constraintStart_toEndOf="@+id/buyNow"
                app:layout_constraintTop_toBottomOf="@+id/productDisc"
                android:backgroundTint="@color/blue_color"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:visibility="visible"
                android:text="@string/submit"
                android:textSize="@dimen/_9ssp"
                android:layout_marginHorizontal="@dimen/_16sdp"

                />

        </LinearLayout>




    </LinearLayout>


</layout>