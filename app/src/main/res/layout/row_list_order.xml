<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <data>
        <variable
            name="orderItem"
            type="com.octal.actorpay.repositories.retrofitrepository.models.order.OrderData" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_bg_color"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"


        >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/orderStatus"
        style="@style/RegularTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/my_oder_status_bg"
        android:letterSpacing="0.01"
        android:padding="@dimen/_5sdp"
        android:text="@{orderItem.orderStatus}"
        tools:text="Success"
        android:textColor="@color/green_color"
        android:textSize="@dimen/_10ssp"
        tools:ignore="RelativeOverlap,UnusedAttribute" />

    <TextView
        android:id="@+id/orderid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins_light"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:text="Order No: "
        android:textColor="@color/text_color"
        android:textSize="@dimen/_10ssp"
        tools:ignore="RtlSymmetry"
        />

    <TextView
        android:id="@+id/orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/orderid_text"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins_regular"
        android:singleLine="true"
        android:text='@{orderItem.orderNo}'
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12ssp"
        tools:ignore="RtlSymmetry"
        tools:text="Your Order Id"
        />


    <TextView
        android:id="@+id/orderprice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orderprice"
        app:layout_constraintBottom_toBottomOf="@+id/orderprice"
        android:fontFamily="@font/poppins_light"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:text="Total Price: "
        android:textColor="@color/text_color"
        android:textSize="@dimen/_10ssp"
        tools:ignore="RtlSymmetry"
        />

    <TextView
        android:id="@+id/orderprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/orderprice_text"
        app:layout_constraintTop_toBottomOf="@+id/orderid_text"
        android:fontFamily="@font/poppins_semibold"
        android:singleLine="true"
        android:text='@{"₹"+orderItem.totalPrice}'
        android:textColor="@color/primary"
        android:textSize="@dimen/_12ssp"
        tools:ignore="RtlSymmetry"
        tools:text="₹123"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/orderprice"
        tools:listitem="@layout/row_order_item"
        tools:itemCount="2"

        />





</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>