<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

<androidx.constraintlayout.widget.ConstraintLayout
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.checkout.CheckOutActivity"
    android:background="@color/primary"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cart_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/txtToolbarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/checkout"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cart_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cart_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/layout_bg"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingTop="@dimen/_30sdp"
        >

        <TextView
            android:id="@+id/delivery_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/poppins_light"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14ssp"
            tools:ignore="RtlSymmetry"
            android:text="Delivery Address" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orderstatus_bg"
            app:layout_constraintTop_toBottomOf="@+id/delivery_address_text"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:padding="@dimen/_10sdp"
            >

            <TextView
                android:id="@+id/address_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/poppins_semibold"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp"
                tools:ignore="RtlSymmetry"
                android:text="Delivery Address" />

            <ImageView
                android:id="@+id/address_delete"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/cross"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/address_edit"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/edit"
                app:layout_constraintEnd_toStartOf="@+id/address_delete"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/_5sdp"
                />

            <ImageView
                android:id="@+id/address_check"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/address_tick"
                app:layout_constraintEnd_toStartOf="@+id/address_edit"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/_5sdp"
                />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_name_text"
                android:fontFamily="@font/poppins_regular"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp"
                tools:ignore="RtlSymmetry"
                android:text="@string/dummy_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/address_layout"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:background="@drawable/orderstatus_bg"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Add New Address"
            android:fontFamily="@font/poppins_regular"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14ssp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/totalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            android:padding="@dimen/_10sdp"
            >

            <TextView
                android:id="@+id/sub_total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/poppins_semibold"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp"
                tools:ignore="RtlSymmetry"
                android:text="@string/sub_total" />


            <TextView
                android:id="@+id/sub_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/sub_total_text"
                app:layout_constraintBottom_toBottomOf="@+id/sub_total_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/poppins_medium"
                tools:text="@string/dummy_actual_amount"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/shipping_charge_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sub_total_text"
                android:fontFamily="@font/poppins_semibold"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp"
                tools:ignore="RtlSymmetry"
                android:visibility="gone"
                android:text="@string/shipping_charge" />


            <TextView
                android:id="@+id/shipping_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/shipping_charge_text"
                app:layout_constraintBottom_toBottomOf="@+id/shipping_charge_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/poppins_medium"
                tools:text="@string/dummy_actual_amount"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/gst_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shipping_charge_text"
                android:fontFamily="@font/poppins_semibold"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp"
                tools:ignore="RtlSymmetry"
                android:text="@string/gst" />


            <TextView
                android:id="@+id/gst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/gst_text"
                app:layout_constraintBottom_toBottomOf="@+id/gst_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/poppins_medium"
                tools:text="@string/dummy_actual_amount"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/_12ssp" />

            <View
                android:id="@+id/total_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_grey"
                app:layout_constraintTop_toBottomOf="@id/gst_text"
                android:layout_marginTop="@dimen/_5sdp"
                />

            <TextView
                android:id="@+id/total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_view"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_semibold"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp"
                tools:ignore="RtlSymmetry"
                android:text="@string/total" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/total_text"
                app:layout_constraintBottom_toBottomOf="@+id/total_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/poppins_medium"
                tools:text="@string/dummy_actual_amount"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/_12ssp" />


            <View
                android:id="@+id/total_view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_grey"
                app:layout_constraintTop_toBottomOf="@id/total"
                android:layout_marginTop="@dimen/_5sdp"
                />

            <LinearLayout
                android:id="@+id/promo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/total_view2"
                android:background="@drawable/btn_outline_gray"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                >

                <EditText
                    android:id="@+id/tvMessage"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:hint="@string/enter_promo_code"
                    android:textColor="@color/text_color"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_12ssp"
                    android:autofillHints="emailAddress" />


                <TextView
                    android:id="@+id/apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    tools:text="Apply"
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/buyNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/promo_layout"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/pink_color"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="@string/place_order"
                android:textSize="@dimen/_10ssp" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>